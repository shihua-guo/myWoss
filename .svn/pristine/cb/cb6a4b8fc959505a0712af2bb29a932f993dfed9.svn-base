package com.briup.util;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.util.ArrayList;
import java.util.Collection;
import java.util.Properties;

/**
 * 初次写本类
 * @author alan
 * @date Oct 11, 2016 7:46:58 PM
 */
public class BackUpImpl implements com.briup.util.BackUP{

	@Override
	public void init(Properties arg0) {
		// TODO Auto-generated method stub
	}

	/**
	 * 获取未入库成功的
	 * @date 2016-10-11 18:15:28
	 * 
	 */
	@Override
	public Object load(String arg0, boolean arg1) throws Exception {
		if (!new File(arg0).exists()) {
			System.out.println("没有该文件，退出读取上次未入库成功的");
			//返回空集合
			return null;
		}
		ObjectInputStream ois = null;
		Object fail = null;
		try {
			ois = new ObjectInputStream(new FileInputStream(arg0));
			fail =  ois.readObject();
			//是否移除文件
			if(arg1){
				new File(arg0).delete();
			}
			ois.close();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (ClassNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return fail;
	}

	/**
	 * 备份失败的（发送前，入库前）
	 * @date 2016-10-11 18:02:37 
	 */
	@Override
	public void store(String arg0, Object arg1, boolean arg2) throws Exception {
		ObjectOutputStream oos = null;
		try {
			oos = new ObjectOutputStream(
					new FileOutputStream(arg0,arg2));
			oos.writeObject(arg1);
			oos.flush();
			oos.close();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

}
